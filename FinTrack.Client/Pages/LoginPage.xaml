<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:FinTrack.Client.ViewModels"
             x:Class="FinTrack.Client.Pages.LoginPage"
             x:DataType="vm:LoginViewModel"
             >
    <VerticalStackLayout VerticalOptions="Center" Spacing="30">
        <Label FontSize="Title"
            Text="Login to FinTrack"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Entry 
               Placeholder="Enter username"
               Text="{Binding Login}"
            />

        <Entry 
               Placeholder="Enter password"
            Text="{Binding Password}"
            />
        <Button Text="Submit" WidthRequest="250" Command="{Binding LoginCommand}"/>

        <Button Text="Regitration" 
                WidthRequest="250" 
                BackgroundColor="BlueViolet"
                Command="{Binding RegistrationCommandCommand}"/>
        
        
    </VerticalStackLayout>
</ContentPage>